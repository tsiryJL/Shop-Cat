<div class="container">
    <div class="row p-4">
        <div class="col-sm-12">
            <h1 class="text-center mb-4"> Contenu du panier</h1>

             <% if @cart_items %>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="bg-primary text-white">
                            <th> Image </th>
                            <th> Title </th>
                            <th> Description </th>
                            <th> Quantity</th>
                            <th> Prix(total) </th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @cart_items.each do |i| %>
                            <tr>
                                <td> <%= image_tag i.item.image_url, width: 50, class: '' %></td>
                                <td> <%= i.item.title%> </td>
                                <td> <%= i.item.description %> </td>
                                <td> <%= i.quantity %></td>
                                <td> <%= number_to_currency i.item.price * i.quantity, unit: " AR", separator: ",", format: "%n%u" %> </td>
                            </tr>
                        <% end %>
                        <tr class="bg-yellow">
                            <th> Total </th>
                            <td></td>
                            <td></td>
                            <td> <%= @quantity_total %> </td>
                            <td> <%= number_to_currency @price_total, unit: " AR", separator: ",", format: "%n%u" %> </td>
                        </tr>
                    </tbody>
                </table>

            <%= link_to 'Passer commande', orders_path, method: 'post', class: 'btn btn-outline-primary float-right' %>

        <% else %>
            <h3 class="text-center text-muted">Panier vide</h3>
        <% end %>

        </div>
    </div>
</div>
