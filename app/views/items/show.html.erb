<br>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <%= image_tag @current_item.image_url, width: '100%' %>
        </div>
        <div class="col-sm-6 p-4 card-bg" style="align-self: center;">
            <h3 class="pl-2 t"><%= @current_item.title %></h3>
            <table class="table table-hover">
                <tr>
                    <th>Prix</th>
                    <td><%= @current_item.price %> Ar</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td><%= @current_item.description %></td>
                </tr>
            </table>
            <hr>
            <%= form_tag carts_path, method: "post" do %>
              <div class="form-row">
                <div class="col-4">
                  <div class="input-group mb-2">
                    <div class="input-group-prepend">
                      <div class="input-group-text">Quantity</div>
                    </div>
                    <%= number_field_tag 'quantity', 1, :class => 'form-control' %>
                    <%= hidden_field_tag 'id', @current_item.id %>
                  </div>
                </div>
              </div>
              <div class="text-center mt-2">
              <%= submit_tag "Ajouter au panier", class: 'btn btn-outline-info' %>
              </div>
            <% end %>
        </div>
    </div>
</div>
