<div class="container h-100">
  <div class="d-flex justify-content-center h-100">
    <div class="user_card">
      <div class="d-flex justify-content-center">
        <div class="brand_logo_container">
          <%= image_tag  "sign", class:"brand_logo" %>
      </div>
      </div>
      <div class="d-flex justify-content-center form_container">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
          <div class="input-group mb-3">
            <div class="input-group-append">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input_user neo-form', placeholder:"Email" %>
          </div>
          <div class="input-group mb-2">
            <div class="input-group-append">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control input_pass neo-form', placeholder:"mots de passe" %>
            </div>

              <div class="input-group mb-3">
            <div class="input-group-append">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control input_pass neo-form', placeholder:"confirmer votre mots de passe" %>
          </div>

            <div class="d-flex justify-content-center mt-3 login_container">
            <%= f.submit "S'inscrire", class: 'btn btn-primary btn-block' %>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
   <div class="flash-popup">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div> 