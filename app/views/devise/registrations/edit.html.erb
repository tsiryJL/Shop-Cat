<div class="container mb-5 mt-5 p-5 card-bg">
<h1 class="text-center mb-5">Modification Profil</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-row">
        <div class="form-group col-md-6">
        <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control", id:"inputEmail4", autocomplete: "email" %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :Nom %>
          <%= f.text_field :last_name, autofocus: true, class: "form-control", autocomplete: "email" %>
        </div>
      </div>
      <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, autofocus: true, class: "form-control", autocomplete: "email" %>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :Mots_de_passe %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>      
        </div>

        <div class="form-group col-md-6">
          <%= f.label :Mots_de_passe_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <%= f.submit "Mettre Ã  jour", class:"btn btn-info", methode: :update %>
      <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Vous voulez supprimer votre profil?" }, method: :delete, class: "btn btn-outline-danger" %>
  <% end %>
</div>

 